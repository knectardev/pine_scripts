indicator("Range Scalper v1.0.0", overlay = true)

// Basic range detection - simplified for archive
const int DEFAULT_PIVOT_LENGTH = 10

int pivotLengthInput = input.int(DEFAULT_PIVOT_LENGTH, "Pivot Length")

float pivotHigh = ta.pivothigh(high, pivotLengthInput, pivotLengthInput)
float pivotLow = ta.pivotlow(low, pivotLengthInput, pivotLengthInput)

plot(pivotHigh, "Resistance", color.red)
plot(pivotLow, "Support", color.green)
